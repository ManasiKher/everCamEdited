<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Map layout style on camera details page-->
    <style name="MapCameraItemRowLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LocationButtonItemRowLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="CameraNameItemValueText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:layout_marginLeft">12dp</item>-->
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="VendorAndModelItemValueText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <!-- View camera details styles-->
    <style name="ViewCameraItemRowLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ViewCameraItemRowItemText">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ViewCameraItemRowItemValueText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="ViewCameraTitleItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:layout_gravity">left</item>
    </style>

</resources>