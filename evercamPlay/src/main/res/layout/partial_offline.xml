<?xml version="1.0" encoding="utf-8"?>

<io.evercam.androidapp.custom.OfflineLayoutView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/offline_view_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:visibility="gone">

    <RelativeLayout
        android:id="@+id/offline_refresh_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/offline_refresh_image_view"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_action_refresh"
            android:tint="@color/white" />

        <ProgressBar
            android:id="@+id/offline_refresh_progress_bar"
            style="?android:attr/indeterminateProgressStyle"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:indeterminateTint="@color/white"
            android:indeterminateTintMode="src_in"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            android:padding="5dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/offline_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/offline_refresh_layout"
        android:layout_marginTop="10dp"
        android:text="@string/msg_offline"
        android:textColor="@color/white"
        android:textSize="16sp" />

</io.evercam.androidapp.custom.OfflineLayoutView>