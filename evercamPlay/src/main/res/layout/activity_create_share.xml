<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <LinearLayout
        android:id="@+id/share_form_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/create_share_user_edit_text"
                style="@style/EditTextWithPadding"
                android:singleLine="true"
                android:hint="@string/create_sharing_hint_username"
                android:paddingRight="140dp" />

            <Spinner
                android:id="@+id/access_permission_spinner"
                android:layout_width="140dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <EditText
            android:id="@+id/create_share_message_edit_text"
            style="@style/EditTextWithPadding"
            android:hint="@string/create_sharing_hint_message" />
    </LinearLayout>
</LinearLayout>