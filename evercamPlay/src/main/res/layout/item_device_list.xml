<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/device_ip_text_view"
            style="@style/DarkText" />

        <TextView
            android:id="@+id/device_mac_text_view"
            android:layout_marginTop="5dp"
            style="@style/DarkText" />

        <TextView
            android:id="@+id/device_company_text_view"
            android:layout_marginTop="5dp"
            style="@style/DarkText" />

    </LinearLayout>


    <TextView
        android:id="@+id/report_camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:text="@string/report_camera"
        android:textSize="13sp"
        android:background="@drawable/border_button_selector"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorAccent" />

</RelativeLayout>