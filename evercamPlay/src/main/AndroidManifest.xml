                    android:host="evercam.io"
                    android:pathPrefix="/gpocam"
                    android:scheme="http" />
                <data
                    android:host="evercam.io"
                    android:pathPrefix="/gpocam"
                    android:scheme="https" />
                <!--<data-->
                    <!--android:host="evercam.io/public/cameras"-->
                    <!--android:pathPattern="/.*"-->
                    <!--android:scheme="http" />-->
                <!--<data-->
                    <!--android:host="evercam.io/public/cameras"-->
                    <!--android:pathPattern="/.*"-->
                    <!--android:scheme="https" />-->
            </intent-filter>
        </activity>
    </application>

</manifest>